<Page
    x:Class="Day17App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Day17App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <Button x:ConnectionId='2' x:Name="launchURIBing"
                    Content="go to www.bing.com"
                    Margin="20,20,0,0"
                                                />
            <Button x:ConnectionId='3' x:Name="launchMsCall"
                    Content="go to Call App"
                    Margin="20,20,0,0"
                                               />
            <Button x:ConnectionId='4' x:Name="launchEmail"
                    Content="go to Email App"
                    Margin="20,20,0,0"
                                              />
            <Button x:ConnectionId='5' x:Name="launchSDKSampleURIScheme"
                    Content="go to SDK Sample URI Scheme"
                    Margin="20,20,0,0"
                                                           />
            <Button x:ConnectionId='6' x:Name="LaunchAnAppForResults"
                    Content="go to App for results"
                    Margin="20,20,0,0"
                                                        />
        </StackPanel>
    </Grid>
</Page>

